<script>
$('.speak').on('click', function(){
        word = this.getAttribute('word');
        var msg = new SpeechSynthesisUtterance(word);
        msg.lang = 'zh-CN';
        msg.rate = 0.8;
        window.speechSynthesis.speak(msg);
});
$(document).ready(function(){
  setInterval(function () {
      $('.addi').transition('bounce');
    }, 2000);
});

